<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/count"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:hint="1/200"/>
    <TextView
        android:id="@+id/baseView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:fontFamily="@font/yumin"
        android:textSize="250sp"
        android:textAlignment="center"
        android:hint="W"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/count"/>
    <TextView
        android:id="@+id/meaningView"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:hint="meaning"
        android:layout_below="@+id/baseView"/>
    <TextView
        android:id="@+id/proncView"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:hint="pronunciation"
        android:layout_below="@+id/meaningView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/unknownKanji"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:text="分からん/忘れちゃった"
                android:textColor="@android:color/white"
                android:backgroundTint="#c0392b"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/knowKanji"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="ちゃんと分かってる"
                android:textSize="16sp"
                android:backgroundTint="#2ecc71"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/knowMeaning"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="意味だけ…。"
                android:textSize="16sp"
                android:backgroundTint="#f1c40f"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/knowPronounce"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="発音だけ…。"
                android:textSize="16sp"
                android:backgroundTint="#16a085"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>